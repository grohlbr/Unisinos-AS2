<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.unisinos.as2.MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:src="@drawable/ic_flag_brazil"/>

            <TextView
                android:id="@+id/txtName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView1"
                android:text="@string/brasil"
                android:textSize="@dimen/textSize"/>

            <TextView
                android:id="@+id/txtSigla1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName1"
                android:layout_toRightOf="@id/imageView1"
                android:text="@string/sigla_brasil"
                android:textSize="@dimen/textSize"/>

            <View android:id="@+id/separator"
                android:background="#000"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical ="true"
                android:layout_below="@id/imageView1"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:src="@drawable/ic_flag_spain"
                android:layout_below="@+id/separator"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/txtName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_below="@id/separator"
                android:text="@string/espanha"
                android:textSize="@dimen/textSize"/>

            <TextView
                android:id="@+id/txtSigla2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName2"
                android:layout_toRightOf="@id/imageView2"
                android:text="@string/sigla_espanha"
                android:textSize="@dimen/textSize"/>

            <View android:id="@+id/separator2"
                android:background="#000"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical ="true"
                android:layout_below="@id/imageView2"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:src="@drawable/ic_flag_usa"
                android:layout_below="@+id/separator2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/txtName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_below="@id/separator2"
                android:text="@string/usa"
                android:textSize="@dimen/textSize"/>

            <TextView
                android:id="@+id/txtSigla3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName3"
                android:layout_toRightOf="@id/imageView3"
                android:text="@string/sigla_usa"
                android:textSize="@dimen/textSize"/>

            <View android:id="@+id/separator3"
                android:background="#000"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical ="true"
                android:layout_below="@id/imageView3"/>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:background="@color/colorAccent">

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size"
            android:src="@drawable/ic_add_black_24dp"/>

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size"
            android:src="@drawable/ic_mode_edit_black_24dp"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size"
            android:src="@drawable/ic_delete_black_24dp"/>

    </LinearLayout>

</RelativeLayout>
